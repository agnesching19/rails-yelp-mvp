<div class="container">
<p id="notice"><%= notice %></p>

<h3>
  Name: <strong><%= @restaurant.name %></strong>
</h3>

<h3>
  Address: <strong><%= @restaurant.address %></strong>
</h3>

<h3>
  Contact: <strong><%= @restaurant.phone_number %></strong>
</h3>

<h3>
  Category: <strong><%= @restaurant.category %></strong>
</h3>

<hr>

<h3>Reviews!</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> - Rating: <%= review.rating %></li>
  <% end %>
</ul>

<hr>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-info" %>
<%= link_to 'Back', restaurants_path, class: "btn btn-info" %>

</div>

<div class="container">
  <h3>New review</h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, placeholder: '0 - 5'%>
    <%= f.submit 'Submit your review!', class: 'btn btn-info' %>
  <% end %>
</div>

<hr>
<hr>
